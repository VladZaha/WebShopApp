@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>List of roles</h2>
<a class="btn btn-primary" asp-action="Create">Add new role</a>
<a class="btn btn-primary" asp-action="UserList">Users list</a>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Edit" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>