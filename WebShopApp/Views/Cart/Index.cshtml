<section class="h-100" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
                </div>
                @if (ViewBag.Cart != null)
                {
                    @foreach (var item in (ViewBag.Cart as Cart).CartItems)
                    {
                        <div class="card rounded-3 mb-4">   
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-between align-items-center">
                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                        <img src="@item.Phone.PhoneImage"
                                     class="img-fluid rounded-3" alt="Phone Image">
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                        <p class="lead fw-normal mb-2">@item.Phone.Brand.Name @item.Phone.PhoneModel</p>
                                        <p><span class="text-muted">Category: </span>@item.Phone.Category.Name<span class="text-muted">Country: </span>@item.Phone.Country.Name</p>
                                    </div>
                                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                        <button class="btn btn-link px-2"
                                        onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                            <i class="fas fa-minus"></i>
                                        </button>

                                        <input id="form1" min="0" name="quantity" value="@item.Quantity" type="number"
                                       class="form-control form-control-sm" readonly/>

                                        <button class="btn btn-link px-2"
                                        onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                        <h5 class="mb-0">$@item.Phone.Price</h5>
                                    </div>
                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                        <a asp-route-id="@item.Phone.Id" asp-action="Remove" class="btn btn-danger">X</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="float-end">
                        <p class="mb-0 me-5 d-flex align-items-center">
                            <span class="small text-muted me-2">Order total:</span> <span class="lead fw-normal">$@ViewBag.Total</span>
                        </p>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <a asp-action="ContactData" class="btn btn-warning btn-block btn-lg">Proceed to Pay</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
